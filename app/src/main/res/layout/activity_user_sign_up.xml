<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/view_color"/>

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:gravity="center">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_marginTop="@dimen/dp_5"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/tvSignAdmin"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/dp_40"
                 android:layout_marginRight="@dimen/dp_40"
                 android:text="@string/signup_as_admin"
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_size_18"
                 android:gravity="center"
                 android:padding="@dimen/dp_15"
                 android:background="@drawable/rectangle_box_filled_rounded_red"/>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/dp_20"
             android:orientation="horizontal">
             <View
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="1dp"
                 android:layout_gravity="center"
                 android:background="@color/view_color"/>
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@mipmap/or"
                 android:gravity="center"
                 android:layout_gravity="center"
                 android:padding="@dimen/dp_5"/>

             <View
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="1dp"
                 android:layout_gravity="center"
                 android:background="@color/view_color"/>

         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_marginTop="@dimen/dp_10"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/tvSignUser"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/dp_40"
                 android:layout_marginRight="@dimen/dp_40"
                 android:text="@string/signup_as_user"
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_size_18"
                 android:gravity="center"
                 android:padding="@dimen/dp_15"
                 android:layout_marginTop="@dimen/dp_10"
                 android:background="@drawable/rectangle_box_filled_rounded_blue_color"/>

         </LinearLayout>
     </LinearLayout>
</LinearLayout>