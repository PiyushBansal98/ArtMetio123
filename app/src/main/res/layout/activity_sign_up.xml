<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/view_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">
            <EditText
                android:id="@+id/etUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dp_5"
                android:hint="@string/email"
                android:imeActionId="@+id/login"
                android:textColorHint="@color/view_color"
                android:drawableLeft="@mipmap/mess"
                android:drawablePadding="@dimen/dp_15"
                android:background="@android:color/transparent"/>
            <View
                android:id="@+id/viewUserEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/black"></View>

            <EditText
                android:id="@+id/etUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:hint="@string/password"
                android:textColorHint="@color/view_color"
                android:drawableLeft="@mipmap/lock"
                android:drawablePadding="@dimen/dp_15"
                android:maxLength="15"
                android:background="@android:color/transparent"/>
            <View
                android:id="@+id/viewUserPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/black"/>


            <TextView
                android:id="@+id/tvSignUpUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/header_sign_up"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/rectangle_box_filled_rounded"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>